<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/white</item>
    </style>

    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/popupwindow_in</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_out</item>
    </style>

    <style name="LoginEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="ChatEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#ccc</item>
    </style>

    <style name="MyTheme" parent="AppTheme">
        <item name="android:textColorSecondary">#6495ED</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="OverflowMenu">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:colorBackground">#fff</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">5dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <!-- 设置弹出菜单文字颜色 -->
        <item name="android:textColor">#000</item>
    </style>

    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:actionMenuTextColor">@android:color/black</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
    </style>

    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>  <!--设置为false即可使menu位置位于toolbar之下-->
    </style>
    <!--修改toolbar弹出剩余隐藏菜单条目按钮的样式-->
    <style name="OverflowButtonStyle" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_left_back</item>
    </style>

    <style name="ToolbarVoteTheme" parent="Theme.AppCompat.Light">
    </style>

    <style name="SettingLine">
        <item name="android:paddingTop">12sp</item>
        <item name="android:paddingBottom">12sp</item>
        <item name="android:paddingLeft">12sp</item>
        <item name="android:paddingRight">5sp</item>
    </style>

    <style name="SettingName">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/setting_text</item>
    </style>

    <style name="SettingDetail">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/setting_detail</item>
        <item name="android:paddingTop">2dp</item>
    </style>

    <style name="GroupFuncText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/group_func_text</item>
    </style>

    <style name="GroupFuncImg">
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/ic_right_back</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
