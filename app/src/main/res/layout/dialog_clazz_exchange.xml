<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:padding="45dp"
    android:id="@+id/layout_exchange"
    android:background="#a0000000"
    android:layout_height="match_parent">

    <LinearLayout
        android:alpha="1"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <View
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="3dp" />
    <TextView
        android:text="更改课程"
        android:textColor="@color/contact_name"
        android:textSize="22sp"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_old_clazz"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_exchange"
            android:src="@drawable/ic_clazz_exchange"
            android:layout_width="36dp"
            android:layout_height="36dp" />
        <EditText
            android:id="@+id/et_new_clazz"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ccc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_exchange_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="取消"
            android:textColor="#7F7F7F"/>

        <View
            android:layout_width="0.1dp"
            android:layout_height="48dp"
            android:background="#ccc"/>

        <Button
            android:id="@+id/btn_exchange_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="确认"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>